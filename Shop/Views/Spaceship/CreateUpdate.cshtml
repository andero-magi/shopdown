@model Shop.Models.Spaceships.SpaceshipCreateUpdateViewModel

<h6 class="mb-4">
    @ViewData["Title"]
</h6>

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Dto.Id" type="hidden"/>
        <input asp-for="Dto.CreatedAt" type="hidden"/>
        <input asp-for="Dto.LastUpdatedAt" type="hidden"/>

        <div class="form-group row mb-3">
            <label asp-for="Dto.Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.Name" class="form-control"/>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Dto.Typename" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.Typename" class="form-control"/>
            </div>
        
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Dto.SpaceshipModel" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.SpaceshipModel" class="form-control"/>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Dto.BuildDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.BuildDate" class="form-control"/>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Dto.Crew" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.Crew" class="form-control"/>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Dto.EnginePower" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Dto.EnginePower" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Dto.Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <div class="custom-file">
                    <input asp-for="Dto.Files" class="form-control bg-dark" type="file" />
                </div>
            </div>
        </div>

        @foreach(var image in Model.Images)
        {
            <partial name="_Images" model="image" />
        }

        @if (ViewData["Title"]!.Equals("Create"))
        {
            <input asp-action="Create" asp-controller="Spaceship" type="submit" class="btn btn-primary" value="Create" />
        } 
        else
        {
            <input asp-action="Update" asp-controller="Spaceship" type="submit" class="btn btn-primary" value="Update" />
        }
    </form>
</div>
@model Shop.Models.Accounts.LoginViewModel;

@{
    ViewBag.Title = "Login";
}

<div class="bg-secondary rounded h-100 p-4 mt-4">
    <h6 class="mb-4">@ViewBag.Title</h6>

    <div class="row">
        <div class="col-md-12">
            <form method="post" id="login-form">
                <input id="h-type" asp-for="Type" hidden/>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe"></label>
                        <input asp-for="RememberMe"/>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    Log in
                </button>

                <div>
                    <a asp-action="ForgotPassword" asp-controller="Accounts">Forgot password</a>
                </div>
            </form>
        </div>
    </div>
</div>
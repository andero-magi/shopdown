@model Shop.Models.Email.EmailViewModel;

@{
    ViewData["Title"] = "Email";
}


<div class="bg-secondary rounded h-100 p-4">
    <h6 class="mb-4">Send an Email</h6>

    <form method="post">
        <div class="form-group row mb-3">
            <label asp-for="Dto.Recipient" class="col-sm-2 col-form-label"></label>
            <input class="form-control col-sm-10" asp-for="Dto.Recipient" type="email" />
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Dto.Subject" class="col-sm-2 col-form-label"></label>
            <input class="form-control col-sm-10" asp-for="Dto.Subject" />
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Dto.Body" class="col-sm-2 col-form-label"></label>
            <textarea rows="15" asp-for="Dto.Body" class="form-control col-sm-10 font-monospace"></textarea>
        </div>

        <input asp-action="Send" asp-controller="Email" type="submit" class="btn btn-primary" value="Send Email"/>
    </form>

</div>
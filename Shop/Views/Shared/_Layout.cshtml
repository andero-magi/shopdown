@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Shop.Core.Domain.ApplicationUser> _manager;
@{
    bool signedIn = _manager.IsSignedIn(User);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>
    
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->

    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shop.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet"> 


    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" asp-append-version="true"/>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="container-fluid">
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <!-- Image Preview Modal Start -->
    <div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" style="max-width: fit-content;">
            <div class="modal-content bg-secondary">
                <div class="modal-body">
                    <!--- 
                    <button type="button" class="close btn btn-primary mb-4 d-block" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                     </button>
                     -->

                    <img src="" class="imagepreview" style="width: 75vw;">
                </div>
            </div>
        </div>
    </div>
    <!-- Image Preview Modal End -->

    <header class="sidebar pe-4 pb-3">
        <nav class="navbar bg-secondary navbar-dark">
            <a class="navbar-brand mx-4 mb-3" asp-area="" asp-controller="Home" asp-action="Index">
                <h3 class="text-primary">
                    <i class="bi bi-bag-fill"></i> Shop
                </h3>
            </a>

            <div class="navbar-nav w-100">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                @if (signedIn)
                {
                    <a class="nav-link" asp-area="" asp-controller="Spaceship" asp-action="Index">Spaceship</a>
                    <a class="nav-link" asp-area="" asp-controller="RealEstate" asp-action="Index">Real Estate</a>
                    <a class="nav-link" asp-area="" asp-controller="Weather" asp-action="Index">Weather</a>
                    <a class="nav-link" asp-area="" asp-controller="OpenWeather" asp-action="Index">Open Weather</a>
                }

                <a class="nav-link" asp-area="" asp-controller="Norris" asp-action="Index">Chuck Norris Jokes</a>
                <a class="nav-link" asp-area="" asp-controller="Cocktail" asp-action="Index">Cocktails</a>
                <a class="nav-link" asp-area="" asp-controller="FreeGames" asp-action="Index">Free Games</a>
                <a class="nav-link" asp-area="" asp-controller="Email" asp-action="Index">Send Emails</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </nav>
    </header>


    <div class="content">
        <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
            <a class="navbar-brand d-flex d-lg-none me-4">
                <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
            </a>

            <a href="#" class="sidebar-toggler flex-shrink-0">
                <i class="fa fa-bars"></i>
            </a>

            <div class="navbar-nav" style="margin-left: auto;">
                @if (!signedIn)
                {
                    <a class="nav-link" asp-controller="Accounts" asp-action="Register">Register</a>
                    <a class="nav-link" asp-controller="Accounts" asp-action="Login">Login</a>
                } 
                else
                {
                    <a class="nav-link" asp-controller="Accounts" asp-action="Logout">Logout</a>
                }
            </div>
        </nav>

        <div class="container-fluid pt-4 px-4">
            @RenderBody()
        </div>

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart/chart.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

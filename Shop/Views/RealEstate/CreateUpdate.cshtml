@model Shop.Core.Dto.RealEstateDto;

@{
    bool isCreate = (ViewData["IsCreate"] ?? "true").Equals("true");
    ViewData["Title"] = isCreate ? "Create" : "Update";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden"/>

        <div class="form-group row">
            <label asp-for="Size" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Size" class="form-control"/>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="RoomNumber" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoomNumber" class="form-control"/>
            </div>
        
        </div>

        <div class="form-group row">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BuildingType" class="form-control"/>
            </div>
        </div>

        @if (isCreate)
        {
            <input asp-action="Create" asp-controller="Spaceship" type="submit" class="btn btn-primary" value="Create" />
        } 
        else
        {
            <input asp-action="Update" asp-controller="Spaceship" type="submit" class="btn btn-primary" value="Update" />
        }
    </form>
</div>
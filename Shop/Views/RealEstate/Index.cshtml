@model IEnumerable<Shop.Core.Domain.RealEstate>;
@{
    int rowNumber = 1;
}


<div class="bg-secondary rounded h-100 p-4">

<h6 class="mb-4">Real Estate</h6>

<div>
    <a asp-action="Create" asp-controller="RealEstate" type="submit" class="btn btn-primary">Create</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col" class="fw-bold">#</th>
                <th scope="col">Size</th>
                <th scope="col">Room Number</th>
                <th scope="col">Building Type</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{/* Comment :) */}

            @foreach (var spaceships in Model)
            {
                // asdasd
                <tr>
                    <td>@rowNumber</td>
                    <td>@spaceships.Size</td>
                    <td>@spaceships.RoomNumber</td>
                    <td>@spaceships.BuildingType</td>
                    <td>
                        <a asp-action="Details" asp-controller="RealEstate" asp-route-id="@spaceships.Id" class="btn btn-outline-info">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                        <a asp-action="Update" asp-controller="RealEstate" asp-route-id="@spaceships.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="RealEstate" asp-route-id="@spaceships.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>

                rowNumber += 1;
            }
        </tbody>
    </table>
</form>

</div>